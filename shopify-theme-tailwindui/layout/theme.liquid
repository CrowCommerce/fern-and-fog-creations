<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_moss }}">

  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
  {%- endif -%}

  <link rel="canonical" href="{{ canonical_url }}">

  <title>
    {{ page_title }}
    {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
    {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}">
  {%- endif -%}

  {% render 'meta-tags' %}

  <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>

  {{ content_for_header }}

  {%- liquid
    assign body_font = settings.font_body
    assign heading_font = settings.font_heading
  -%}

  <style>
    :root {
      /* Brand Colors */
      --color-moss: {{ settings.color_moss }};
      --color-fern: {{ settings.color_fern }};
      --color-parchment: {{ settings.color_parchment }};
      --color-bark: {{ settings.color_bark }};
      --color-mist: {{ settings.color_mist }};
      --color-gold: {{ settings.color_gold }};

      /* Typography */
      --font-heading-family: {{ heading_font.family }}, {{ heading_font.fallback_families }};
      --font-heading-style: {{ heading_font.style }};
      --font-heading-weight: {{ heading_font.weight }};

      --font-body-family: {{ body_font.family }}, {{ body_font.fallback_families }};
      --font-body-style: {{ body_font.style }};
      --font-body-weight: {{ body_font.weight }};

      --base-font-size: {{ settings.base_font_size }}px;

      /* Page Width */
      {%- case settings.page_width -%}
        {%- when 'narrow' -%}
          --max-width: 1200px;
        {%- when 'wide' -%}
          --max-width: 1440px;
        {%- else -%}
          --max-width: 1280px;
      {%- endcase -%}
    }

    {{ heading_font | font_face: font_display: 'swap' }}
    {{ body_font | font_face: font_display: 'swap' }}
  </style>

  {{ 'theme.css' | asset_url | stylesheet_tag }}

  <script>
    document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    if (Shopify.designMode) {
      document.documentElement.classList.add('shopify-design-mode');
    }
  </script>
</head>

<body class="bg-parchment text-bark font-sans antialiased">
  <a class="skip-to-content" href="#MainContent">
    {{ 'general.accessibility.skip_to_content' | t }}
  </a>

  {% sections 'header-group' %}

  <main id="MainContent" class="content-for-layout focus:outline-none" role="main" tabindex="-1">
    {{ content_for_layout }}
  </main>

  {% sections 'footer-group' %}

  <ul hidden>
    <li id="a11y-refresh-page-message">{{ 'general.accessibility.refresh_page' | t }}</li>
  </ul>

  <script>
    window.shopUrl = '{{ routes.root_url }}';
    window.routes = {
      cart_add_url: '{{ routes.cart_add_url }}',
      cart_change_url: '{{ routes.cart_change_url }}',
      cart_update_url: '{{ routes.cart_update_url }}',
      cart_url: '{{ routes.cart_url }}',
      predictive_search_url: '{{ routes.predictive_search_url }}'
    };

    window.cartStrings = {
      error: `{{ 'cart.general.cart_error' | t }}`,
      quantityError: `{{ 'cart.general.quantity_error' | t }}`
    };

    window.variantStrings = {
      addToCart: `{{ 'products.product.add_to_cart' | t }}`,
      soldOut: `{{ 'products.product.sold_out' | t }}`,
      unavailable: `{{ 'products.product.unavailable' | t }}`
    };

    window.themeSettings = {
      cartType: '{{ settings.cart_type }}',
      enableStickyHeader: {{ settings.enable_sticky_header }}
    };
  </script>
</body>
</html>
