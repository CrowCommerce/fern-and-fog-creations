{%- comment -%}
  Featured Collection Section
  Displays products from a selected collection in a grid
{%- endcomment -%}

{%- liquid
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_to_show | default: 4
-%}

<section class="bg-parchment py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    {%- comment -%} Section Header {%- endcomment -%}
    <div class="flex items-center justify-between mb-12">
      <div>
        {%- if section.settings.heading != blank -%}
          <h2 class="text-3xl font-display font-bold tracking-tight text-bark sm:text-4xl">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        {%- if section.settings.subheading != blank -%}
          <p class="mt-4 text-base text-bark/70 max-w-2xl">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
      </div>

      {%- if section.settings.show_view_all and collection != empty -%}
        <div class="hidden sm:block">
          <a
            href="{{ collection.url }}"
            class="text-sm font-medium text-fern hover:text-moss transition-colors"
          >
            {{ 'sections.featured_collection.view_all' | t }}
            <span aria-hidden="true"> &rarr;</span>
          </a>
        </div>
      {%- endif -%}
    </div>

    {%- if collection != empty and collection.products.size > 0 -%}
      {%- comment -%} Product Grid {%- endcomment -%}
      <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
        {%- for product in collection.products limit: products_to_show -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      </div>

      {%- comment -%} Mobile View All Link {%- endcomment -%}
      {%- if section.settings.show_view_all -%}
        <div class="mt-10 text-center sm:hidden">
          <a
            href="{{ collection.url }}"
            class="text-sm font-medium text-fern hover:text-moss transition-colors"
          >
            {{ 'sections.featured_collection.view_all' | t }}
            <span aria-hidden="true"> &rarr;</span>
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      {%- comment -%} Empty State {%- endcomment -%}
      <div class="text-center py-12">
        <p class="text-bark/60">
          {%- if collection == empty -%}
            Please select a collection in the section settings.
          {%- else -%}
            This collection is empty.
          {%- endif -%}
        </p>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our handpicked selection of coastal treasures"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products to Show",
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' Link",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
