{%- comment -%}
  Collection Banner Section - Collection page header with image
{%- endcomment -%}

<div class="relative bg-moss">
  {%- comment -%} Background Image {%- endcomment -%}
  {%- if collection.image -%}
    <div aria-hidden="true" class="absolute inset-0 overflow-hidden">
      <img
        src="{{ collection.image | image_url: width: 2000 }}"
        alt="{{ collection.image.alt | default: collection.title | escape }}"
        width="2000"
        height="600"
        class="size-full object-cover object-center"
        loading="eager"
      >
    </div>
    <div aria-hidden="true" class="absolute inset-0 bg-gradient-to-b from-moss/70 via-moss/50 to-moss/70"></div>
  {%- endif -%}

  {%- comment -%} Content {%- endcomment -%}
  <div class="relative mx-auto flex max-w-4xl flex-col items-center px-6 py-24 text-center sm:py-32 lg:px-0">
    <h1 class="text-4xl font-display font-bold tracking-tight text-parchment sm:text-5xl lg:text-6xl">
      {{ collection.title }}
    </h1>

    {%- if collection.description != blank -%}
      <p class="mt-6 text-lg text-mist max-w-2xl leading-relaxed">
        {{ collection.description }}
      </p>
    {%- endif -%}

    {%- comment -%} Product Count {%- endcomment -%}
    <p class="mt-4 text-sm text-mist/80">
      {{ collection.products_count }}
      {%- if collection.products_count == 1 -%}
        {{ 'products.collection.products_count.one' | t: count: collection.products_count }}
      {%- else -%}
        {{ 'products.collection.products_count.other' | t: count: collection.products_count }}
      {%- endif -%}
    </p>
  </div>
</div>

{% schema %}
{
  "name": "Collection Banner",
  "settings": []
}
{% endschema %}
