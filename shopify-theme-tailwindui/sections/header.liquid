{%- comment -%}
  Header Section - Converted from Next.js Header component
  Includes: Logo, Navigation, Mobile Menu, Cart Button
{%- endcomment -%}

<div class="bg-parchment">
  <header class="{% if settings.enable_sticky_header %}sticky top-0 z-50{% endif %} bg-parchment border-b-2 border-bark/20" data-header>
    <nav aria-label="Top" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-20 items-center justify-between lg:grid lg:grid-cols-3 lg:gap-8">

        {%- comment -%} Mobile menu button {%- endcomment -%}
        <div class="flex items-center lg:hidden">
          <button
            type="button"
            class="-ml-2 rounded-md p-2 text-bark hover:text-moss transition-colors"
            aria-label="{{ 'general.accessibility.open_menu' | t }}"
            data-mobile-menu-toggle
          >
            <span class="sr-only">{{ 'general.accessibility.open_menu' | t }}</span>
            <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </button>
        </div>

        {%- comment -%} Desktop Navigation - Left side {%- endcomment -%}
        <div class="hidden lg:flex lg:items-center lg:space-x-8">
          <a href="{{ routes.root_url }}" class="text-sm font-medium text-bark hover:text-fern transition-colors">
            {{ 'header.navigation.home' | t }}
          </a>
          <a href="{{ pages.gallery.url }}" class="text-sm font-medium text-bark hover:text-fern transition-colors">
            {{ 'header.navigation.gallery' | t }}
          </a>
        </div>

        {%- comment -%} Logo/Wordmark - Center {%- endcomment -%}
        <a href="{{ routes.root_url }}" class="flex items-center space-x-2 justify-center">
          <svg class="h-6 w-6 text-fern" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"/>
            <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"/>
          </svg>
          <span class="font-display text-2xl font-semibold text-bark">
            {{ section.settings.store_name | default: shop.name }}
          </span>
        </a>

        {%- comment -%} Desktop Navigation - Right side {%- endcomment -%}
        <div class="hidden lg:flex lg:items-center lg:justify-end lg:space-x-8">
          <a href="{{ routes.all_products_collection_url }}" class="text-sm font-medium text-bark hover:text-fern transition-colors">
            {{ 'header.navigation.shop' | t }}
          </a>
          <a href="{{ pages.contact.url }}" class="text-sm font-medium text-bark hover:text-fern transition-colors">
            {{ 'header.navigation.contact' | t }}
          </a>
          <a href="{{ pages.about.url }}" class="text-sm font-medium text-bark hover:text-fern transition-colors">
            {{ 'header.navigation.about' | t }}
          </a>

          {%- comment -%} Cart Button {%- endcomment -%}
          <button
            type="button"
            class="group -m-2 flex items-center p-2"
            aria-label="{{ 'header.cart.title' | t }}"
            data-cart-drawer-toggle
          >
            <svg class="size-6 shrink-0 text-bark group-hover:text-fern transition-colors" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
            </svg>
            <span class="ml-2 text-sm font-medium text-bark group-hover:text-fern transition-colors" data-cart-count>
              {{ cart.item_count }}
            </span>
            <span class="sr-only">{{ 'header.cart.items_count.other' | t: count: cart.item_count }}</span>
          </button>
        </div>

        {%- comment -%} Mobile Cart Icon {%- endcomment -%}
        <div class="flex items-center lg:hidden">
          <button
            type="button"
            class="group -mr-2 flex items-center p-2"
            aria-label="{{ 'header.cart.title' | t }}"
            data-cart-drawer-toggle
          >
            <svg class="size-6 shrink-0 text-bark group-hover:text-fern transition-colors" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
            </svg>
            <span class="ml-2 text-sm font-medium text-bark group-hover:text-fern transition-colors" data-cart-count>
              {{ cart.item_count }}
            </span>
            <span class="sr-only">{{ 'header.cart.items_count.other' | t: count: cart.item_count }}</span>
          </button>
        </div>
      </div>
    </nav>
  </header>

  {%- comment -%} Mobile Menu {%- endcomment -%}
  <div class="relative z-[60] lg:hidden" data-mobile-menu style="display: none;">
    <div class="fixed inset-0 bg-moss/50 transition-opacity" data-mobile-menu-backdrop></div>

    <div class="fixed inset-0 z-40 flex">
      <div class="relative flex w-full max-w-xs transform flex-col overflow-y-auto bg-parchment pb-12 shadow-xl transition-transform" data-mobile-menu-panel>
        <div class="flex px-4 pt-5 pb-2">
          <button
            type="button"
            class="relative -m-2 inline-flex items-center justify-center rounded-md p-2 text-bark hover:text-moss"
            data-mobile-menu-close
          >
            <span class="absolute -inset-0.5"></span>
            <span class="sr-only">{{ 'general.accessibility.close_menu' | t }}</span>
            <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        {%- comment -%} Mobile Navigation Links {%- endcomment -%}
        <div class="mt-8 space-y-2 px-4">
          <a href="{{ routes.root_url }}" class="block rounded-md px-3 py-3 text-base font-medium text-bark hover:bg-mist hover:text-moss transition-colors">
            {{ 'header.navigation.home' | t }}
          </a>
          <a href="{{ pages.gallery.url }}" class="block rounded-md px-3 py-3 text-base font-medium text-bark hover:bg-mist hover:text-moss transition-colors">
            {{ 'header.navigation.gallery' | t }}
          </a>
          <a href="{{ routes.all_products_collection_url }}" class="block rounded-md px-3 py-3 text-base font-medium text-bark hover:bg-mist hover:text-moss transition-colors">
            {{ 'header.navigation.shop' | t }}
          </a>
          <a href="{{ pages.contact.url }}" class="block rounded-md px-3 py-3 text-base font-medium text-bark hover:bg-mist hover:text-moss transition-colors">
            {{ 'header.navigation.contact' | t }}
          </a>
          <a href="{{ pages.about.url }}" class="block rounded-md px-3 py-3 text-base font-medium text-bark hover:bg-mist hover:text-moss transition-colors">
            {{ 'header.navigation.about' | t }}
          </a>
        </div>

        {%- comment -%} Mobile Divider {%- endcomment -%}
        <div class="mt-8 border-t border-bark/20 px-4 pt-8">
          <p class="text-sm text-bark/60 font-display italic">
            {{ 'header.mobile_tagline' | t }}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "store_name",
      "label": "Store Name",
      "default": "Fern & Fog Creations",
      "info": "Leave blank to use shop name"
    }
  ]
}
{% endschema %}
