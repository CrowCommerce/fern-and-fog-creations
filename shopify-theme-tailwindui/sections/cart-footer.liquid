{%- comment -%}
  Cart Footer Section - Cart totals and checkout button
{%- endcomment -%}

<div class="bg-parchment border-t-2 border-bark/20 py-8">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex justify-end">
      <div class="w-full lg:w-1/2 xl:w-1/3">

        {%- comment -%} Subtotal {%- endcomment -%}
        <div class="flex justify-between text-base font-medium text-bark mb-2">
          <p>{{ 'cart.general.subtotal' | t }}</p>
          <p class="font-display text-xl">{{ cart.total_price | money }}</p>
        </div>

        <p class="text-sm text-bark/60 mb-6">
          {{ 'cart.general.shipping_note' | t }}
        </p>

        {%- comment -%} Cart Note {%- endcomment -%}
        {%- if section.settings.show_note -%}
          <div class="mb-6">
            <label for="cart-note" class="block text-sm font-medium text-bark mb-2">
              Order note
            </label>
            <textarea
              id="cart-note"
              name="note"
              rows="3"
              class="w-full rounded-md border-bark/20 bg-parchment text-bark focus:border-fern focus:ring-fern"
              placeholder="Special instructions for your order..."
            >{{ cart.note }}</textarea>
          </div>
        {%- endif -%}

        {%- comment -%} Checkout Button {%- endcomment -%}
        <button
          type="submit"
          name="checkout"
          class="w-full flex items-center justify-center rounded-md border-2 border-fern bg-fern px-6 py-3 text-base font-medium text-parchment hover:bg-moss hover:border-moss transition-colors"
        >
          {{ 'cart.general.checkout' | t }}
        </button>

        <div class="mt-6 flex justify-center text-center text-sm text-bark/60">
          <p>
            or{' '}
            <a href="{{ routes.all_products_collection_url }}" class="font-medium text-fern hover:text-moss transition-colors">
              {{ 'cart.general.continue_shopping' | t }}
              <span aria-hidden="true"> &rarr;</span>
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Cart Footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_note",
      "label": "Show Order Note Field",
      "default": true
    }
  ]
}
{% endschema %}
