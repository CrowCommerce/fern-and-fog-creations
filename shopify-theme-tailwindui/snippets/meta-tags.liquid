{%- comment -%} SEO and Social Meta Tags {%- endcomment -%}

<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:title" content="{{ page_title | default: shop.name }}">
<meta property="og:type" content="website">
<meta property="og:description" content="{{ page_description | default: shop.description | default: shop.name }}">

{%- if settings.social_image -%}
  <meta property="og:image" content="http:{{ settings.social_image | image_url: width: 1200 }}">
  <meta property="og:image:secure_url" content="https:{{ settings.social_image | image_url: width: 1200 }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{%- endif -%}

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ page_title | default: shop.name }}">
<meta name="twitter:description" content="{{ page_description | default: shop.description | default: shop.name }}">

{%- if template.name == 'product' -%}
  <meta property="og:type" content="product">
  <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}">
  <meta property="og:price:currency" content="{{ cart.currency.iso_code }}">

  {%- if product.featured_image -%}
    <meta property="og:image" content="http:{{ product.featured_image.src | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ product.featured_image.src | image_url: width: 1200 }}">
  {%- endif -%}
{%- elsif template.name == 'collection' -%}
  {%- if collection.image -%}
    <meta property="og:image" content="http:{{ collection.image | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ collection.image | image_url: width: 1200 }}">
  {%- endif -%}
{%- elsif template.name == 'article' -%}
  <meta property="og:type" content="article">
  <meta property="article:published_time" content="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}">
  <meta property="article:author" content="{{ article.author }}">

  {%- if article.image -%}
    <meta property="og:image" content="http:{{ article.image | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ article.image | image_url: width: 1200 }}">
  {%- endif -%}
{%- endif -%}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": {{ shop.name | json }},
  "url": {{ request.origin | append: routes.root_url | json }},
  {%- if settings.social_image -%}
    "logo": {{ settings.social_image | image_url: width: 500 | prepend: "https:" | json }},
  {%- endif -%}
  "sameAs": [
    {{ settings.social_instagram_link | json }},
    {{ settings.social_facebook_link | json }},
    {{ settings.social_pinterest_link | json }}
  ]
}
</script>

{%- if template.name == 'product' -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Product",
  "name": {{ product.title | json }},
  "description": {{ product.description | strip_html | json }},
  "image": {{ product.featured_image.src | image_url: width: 1200 | prepend: "https:" | json }},
  "offers": {
    "@type": "Offer",
    "url": {{ request.origin | append: product.url | json }},
    "priceCurrency": {{ cart.currency.iso_code | json }},
    "price": {{ product.price | divided_by: 100.0 | json }},
    "availability": {%- if product.available -%}"https://schema.org/InStock"{%- else -%}"https://schema.org/OutOfStock"{%- endif -%}
  }
}
</script>
{%- endif -%}
