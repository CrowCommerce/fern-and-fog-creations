# Shopify Integration (REQUIRED for production)
# Get these from your Shopify admin: Apps > Develop apps > Create an app
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your-storefront-access-token
SHOPIFY_REVALIDATION_SECRET=your-revalidation-secret

# Data Source Control
# Set to "true" to use Shopify API, "false" to use local data (src/data/products.ts)
NEXT_PUBLIC_USE_SHOPIFY=true

# Builder.io CMS (REQUIRED for visual page editing)
# Get your API key from: https://builder.io/account/organization
BUILDER_PUBLIC_KEY=your-builder-public-key
NEXT_PUBLIC_BUILDER_PUBLIC_KEY=your-builder-public-key

# Analytics & Tracking
# Vercel Analytics is ALWAYS enabled (privacy-friendly, GDPR-compliant, no config needed)
# Enable in Vercel Dashboard: https://vercel.com/dashboard > Analytics
# Works automatically when deployed to Vercel (free tier available)

# OPTIONAL: Google Analytics 4 (GA4) - Get from: https://analytics.google.com/
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# OPTIONAL: Google Tag Manager (GTM) - Get from: https://tagmanager.google.com/
# Typically used instead of GA4 for advanced tracking needs
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Email Service for Contact Form (Choose ONE - implementation pending)
# SendGrid - Get from: https://sendgrid.com/
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=contact@fernandfogcreations.com

# OR AWS SES - Get from: https://aws.amazon.com/ses/
AWS_SES_ACCESS_KEY_ID=your-aws-access-key
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SES_REGION=us-east-1

# OR Mailgun - Get from: https://www.mailgun.com/
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# Site Configuration (REQUIRED for production)
# Production URL of your site - used for SEO (sitemap, robots.txt) and canonical URLs
# If not set, falls back to VERCEL_PROJECT_PRODUCTION_URL, then http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://fernandfogcreations.com
